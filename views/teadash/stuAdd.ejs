<%- include('partials/head')%>
  <div class="min-vh-100">
    <div class="container ">
      <div class="row justify-content-center align-items-center p-5">
        <div class="col-sm-10 ">
          <h1 class="text-secondary text-center">Add new student</h1>
          <div class="border border-secondary rounded p-2 shadow">
            <form class="row g-3 validated-form" novalidate action="/teacherdash/students" method="POST"
              enctype="multipart/form-data">

              <div class="col-md-6 ">
                <label for="fName" class="form-label">First Name</label>
                <input type="text" class="form-control" id="fName" name="studentAdd[firstName]" required>
              </div>
              <div class="col-md-6 ">
                <label for="lName" class="form-label">Last Name</label>
                <input type="text" class="form-control" id="lname" name="studentAdd[lastName]" required>
              </div>
              <div class="col-md-6 ">
                <label for="father" class="form-label">Father Name</label>
                <input type="text" class="form-control" id="father" name="studentAdd[fatherName]">
              </div>
              <div class="col-md-6 ">
                <label for="mother" class="form-label">Mother Name</label>
                <input type="text" class="form-control" id="lname" name="studentAdd[motherName]">
              </div>
              <div class="col-md-6">
                <label for="phone" class="form-label">Phone No.</label>
                <input type="number" class="form-control" id="phone" name="studentAdd[phone]">
              </div>
              <div class="col-md-6">
                <label for="email" class="form-label ">Email</label>
                <input type="email" class="form-control" id="email" name="studentAdd[email]">
              </div>
              <div class="col-md-6">
                <label for="DOB" class="form-label">DOB</label>
                <input type="date" class="form-control" id="DOB" name="studentAdd[dob]">
              </div>
              <div class="col-md-6">
                <label for="sex" class="form-label">Sex</label>
                <select class="form-select" aria-label="Default select example" id="sex" name="studentAdd[sex]">
                  <option value="Male">Male</option>
                  <option value="Female">Female</option>
                  <option value="Other">Other</option>
                </select>
              </div>
              <div class="col-12">
                <label for="inputAddress" class="form-label">Address</label>
                <input type="text" class="form-control" id="inputAddress" name="studentAdd[address]">
              </div>
              <div class="col-md-6">
                <label for="inputCity" class="form-label">City</label>
                <input type="text" class="form-control" id="inputCity" name="studentAdd[city]">
              </div>
              <div class="col-md-4">
                <label for="inputState" class="form-label">State</label>
                <input type="text" class="form-control" id="inputState" name="studentAdd[state]">

              </div>
              <div class="col-md-2">
                <label for="inputZip" class="form-label">Zip</label>
                <input type="text" class="form-control" id="inputZip" name="studentAdd[zip]">
              </div>

              <div class="col-md-4">
                <label for="departSelect" class="form-label">Department</label>
                <select class="form-select" aria-label="Default select example" id="departSelect" required
                  name="studentAdd[department]">
                  <option value="IT">IT</option>
                  <option value="CS">CS</option>
                </select>
              </div>
              <div class="col-md-4">
                <label for="courseSelect" class="form-label">Course</label>
                <select class="form-select" aria-label="Default select example" id="courseSelect"
                  name="studentAdd[course]">
                  <option selected value="Science">Science</option>
                </select>
              </div>
              <div class="col-md-4">
                <label for="yearSelect" class="form-label">Year</label>
                <select class="form-select" aria-label="Default select example" id="yearSelect" name="studentAdd[year]">
                  <option selected value="1">2022-2023</option>
                </select>
              </div>
              <div class="col-md-4">
                <label for="semSelect" class="form-label">Semester</label>
                <select class="form-select" aria-label="Default select example" id="semSelect"
                  name="studentAdd[semester]">
                  <option selected>Select Semester</option>
                  <% for( let i=0; i< 6; i++ ) { %>
                    <option value="<%=i+1 %>">Semester-<%=i+1%>
                    </option>
                    <% } %>
                </select>
              </div>
              <div class="col-md-4">
                <label for="divSelect" class="form-label">Div</label>
                <select class="form-select" aria-label="Default select example" id="divSelect" name="studentAdd[div]">
                  <option value="A">A</option>
                  <option value="B">B</option>
                  <option value="C">C</option>
                </select>
              </div>
              <div class="col-md-4">
                <label for="roll" class="form-label">Roll No.</label>
                <input type="number" class="form-control" id="roll" name="studentAdd[roll]" required>
              </div>
              <div class="col">
                <label for="formFile" class="form-label">Upload Photo</label>
                <input class="form-control" type="file" id="formFile" name="studentAdd[studentphoto]">
              </div>
              <div class=" col-12 text-end">
                <button class="btn btn-primary ">Add</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('partials/footer')%>